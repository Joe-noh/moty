generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  uuid String @unique
  googleAccount GoogleAccount?
  rankings Ranking[]
}

model GoogleAccount {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int @unique
  uid String @unique
}

model Ranking {
  id Int @id @default(autoincrement())
  user User @relation(fields: [userId], references: [id])
  userId Int
  year Int
  movies Movie[]

  @@unique([userId, year])
}

model Movie {
  id Int @id @default(autoincrement())
  movieId String
  ranking Ranking @relation(fields: [rankingId], references: [id])
  rankingId Int
  position Int

  @@unique([rankingId, position])
}
